@model Blog.Models.Post.PostViewModel

@{
    ViewBag.Title = Model.Title;
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <h2>@Model.Title</h2>
            <br />
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            @Html.Raw(Model.Body)
        </div>
    </div>
</div>
