@model Blog.Models.Admin.User.UserEditModel

@{
    ViewBag.Title = Model.AddOrEdit + " User";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <h2>@Model.AddOrEdit User</h2>
            <br />
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-4 col-md-offset-1">
            <form id="Form" action="edit" method="post">
                <table id="UserEditTable" class="table table-striped entryTable">
                    <tbody>
                        <tr>
                            <td><b>Username:</b></td>
                            <td><input type="text" class="form-control" value="@Model.Username" data-bind="value: Username"/></td>
                        </tr>
                        <tr>
                            <td><b>Email:</b></td>
                            <td><input type="text" class="form-control" value="@Model.Email" data-bind="value: Email"/></td>
                        </tr>
                        <tr>
                            <td><b>Role:</b></td>
                            <td><input type="text" class="form-control" value="@Model.Role" data-bind="value: Role"/></td>
                        </tr>
                        <tr>
                            <td><b>First Name:</b></td>
                            <td><input type="text" class="form-control" value="@Model.FirstName" data-bind="value: FirstName"/></td>
                        </tr>
                        <tr>
                            <td><b>Last Name:</b></td>
                            <td><input type="text" class="form-control" value="@Model.LastName" data-bind="value: LastName"/></td>
                        </tr>
                        <tr>
                            <td><b>Nickname:</b></td>
                            <td><input type="text" class="form-control" value="@Model.Nickname" data-bind="value: Nickname"/></td>
                        </tr>
                        <tr>
                            <td><b>Public Name:</b></td>
                            <td><input type="text" class="form-control" value="@Model.PublicName" data-bind="value: PublicName"/></td>
                        </tr>
                        <tr>
                            <td><b>Website:</b></td>
                            <td><input type="text" class="form-control" value="@Model.Website" data-bind="value: Website"/></td>
                        </tr>
                        <tr>
                            <td><b>Biography:</b></td>
                            <td><input type="text" class="form-control" value="@Model.Biography" data-bind="value: Biography"/></td>
                        </tr>
                        <tr>
                            <td><b>Profile Picture:</b></td>
                            <td><input type="text" class="form-control" value="@Model.ProfilePicture" data-bind="value: ProfilePicture"/></td>
                        </tr>
                        <tr>
                            <td><b>Password:</b></td>
                            <td><input type="text" class="form-control" value="@Model.Password" data-bind="value: Password" /></td>
                        </tr>
                        <tr>
                            <td style="padding-top: 30px">
                                <button type="button" data-bind="click: save" class="btn btn-success btn-md"><i class="fa fa-floppy-o"></i> Save</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>


<script type="text/javascript">
    var initialModel = @Html.Raw(Json.Encode(Model));
    $(document).ready(function(){
    });
</script>
<script type="text/javascript" src="@Url.Content("~/Content/UserAdmin/UserEdit.js")"></script>
