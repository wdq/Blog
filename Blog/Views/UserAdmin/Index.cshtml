@model Blog.Models.Admin.User.UserIndexModel

@{
    ViewBag.Title = "Users";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <h2>Users <a class="btn btn-success" href="@Url.Action("Edit", "UserAdmin")">Add</a></h2>
            <br />
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <table id="UserTable" class="display" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th></th>
                        <th>Username</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Posts</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
            {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Username</td>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>Todo</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var userTable = $('#UserTable').DataTable({
            "order": [[1, "asc"]],
            columns: [
                {
                    className: "commandButtonLeft",
                    data: "Id",
                    sortable: false,
                    render: function (data, type, full, meta) {
                        var commandButtonLeftHtml = "<a href='UserAdmin/Edit?id=" + data + "' class='btn btn-default hl-view' style='margin-right: 3px;'><i class='fa fa-pencil'></i></span></a>";
                        //commandButtonLeftHtml += "<a class='btn btn-default hl-view' data-toggle='modal' data-id='" + data + "' data-target='#deleteConfirmationModal'><i class='fa fa-trash'></i></span></a>";

                        return commandButtonLeftHtml;
                    },
                    width: "70"
                },
                { "data": "Username" },
                { "data": "Name" },
                { "data": "Email" },
                { "data": "Role" },
                { "data": "Posts" }
            ]
        });
    });
</script>