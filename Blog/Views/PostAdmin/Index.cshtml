@{
    ViewBag.Title = "Posts";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <h2>Posts <a class="btn btn-success" href="@Url.Action("Edit", "PostAdmin")">Add</a></h2>
            <br />
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <table id="PostTable" class="display" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Categories</th>
                        <th>Tags</th>
                        <th>Comments</th>
                        <th>Timestamp</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        var userTable = $('#PostTable').DataTable({
            "processing": true,
            "serverSide": true,
            "order": [[6, "desc"]],
            "ajax": {
                "type": "POST",
                "url": "PostAdmin/PostIndexTable",
                "dataType": "JSON"
            },
            "processing": true,
            "paging": true,
            "deferRender": true,
            "columns": [
                {
                    "data": "Id",
                    sortable: false
                },
                { "data": "Title" },
                { "data": "Author" },
                {
                    "data": "Categories",
                    sortable: false
                },
                {
                    "data": "Tags",
                    sortable: false
                },
                { "data": "Comments" },
                { "data": "Timestamp" }
            ]
        });

        $("#PostTable").on("click", ".deletePostButton", function () {
            if (!confirm("Are you sure you want to permanently delete this post?")) return;
            var id = $(this).attr('postId');
            $.ajax({
                type: "POST",
                url: "./PostAdmin/DeletePostPost?id=" + id
            });
            $('#PostTable').DataTable().row($(this).parents('tr')).remove().draw();
        });
    });
</script>