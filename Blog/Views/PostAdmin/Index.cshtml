@model Blog.Models.Admin.Post.PostIndexModel

@{
    ViewBag.Title = "Posts";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <h2>Posts <a class="btn btn-success" href="@Url.Action("Edit", "PostAdmin")">Add</a></h2>
            <br />
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-10 col-md-offset-1">
            <table id="PostTable" class="display" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Categories</th>
                        <th>Tags</th>
                        <th>Comments</th>
                        <th>Timestamp</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var post in Model.Posts)
            {
                        <tr>
                            <td>@post.Id</td>
                            <td>@post.Title</td>
                            <td><a href="./UserAdmin/Edit?id=@post.Author.Key">@post.Author.Value</a></td>
                            <td>
                                @foreach(var category in post.Categories)
                                {
                                  <a href="./CategoryAdmin/Edit?id=@category.Key">@category.Value</a><text>, </text>
                                }
                            </td>
                            <td>
                                @foreach (var tag in post.Tags)
                                {
                                    <a href="./TagAdmin/Edit?id=@tag.Key">@tag.Value</a><text>, </text>
}
                            </td>                            
                            <td>@post.Comments</td>
                            <td>@post.Timestamp</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var userTable = $('#PostTable').DataTable({
            "order": [[1, "asc"]],
            columns: [
                {
                    className: "commandButtonLeft",
                    data: "Id",
                    sortable: false,
                    render: function (data, type, full, meta) {
                        var commandButtonLeftHtml = "";
                        commandButtonLeftHtml += "<a href='Post/ViewId?id=" + data + "' class='btn btn-default hl-view' style='margin-right: 3px;'><i class='fa fa-search'></i></span></a>";
                        commandButtonLeftHtml += "<a href='PostAdmin/Edit?id=" + data + "' class='btn btn-default hl-view' style='margin-right: 3px;'><i class='fa fa-pencil'></i></span></a>";
                        commandButtonLeftHtml += "<div class='btn btn-default hl-view deletePostButton' postId='" + data + "'><i class='fa fa-trash'></i></div>";

                        return commandButtonLeftHtml;
                    },
                    width: "120"
                },
                { "data": "Title" },
                { "data": "Author" },
                { "data": "Categories" },
                { "data": "Tags" },
                { "data": "Comments" },
                { "data": "Timestamp" }
            ]
        });

        $("#PostTable").on("click", ".deletePostButton", function () {
            if (!confirm("Are you sure you want to permanently delete this post?")) return;
            var id = $(this).attr('postId');
            $.ajax({
                type: "POST",
                url: "./PostAdmin/DeletePostPost?id=" + id
            });
            $('#PostTable').DataTable().row($(this).parents('tr')).remove().draw();
        });
    });
</script>